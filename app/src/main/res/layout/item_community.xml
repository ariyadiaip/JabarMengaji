<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivCommunityImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/community_image"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_image_community"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tvCommunityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCommunityImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Masjid Raya Al-Jabbar" />

    <TextView
        android:id="@+id/tvCommunityAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:maxLines="2"
        android:textColor="@color/gray_600"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvCommunityName"
        app:layout_constraintTop_toBottomOf="@+id/tvCommunityName"
        tools:text="Jl. Cimincrang No.14, Cimenerang, Kec. Gedebage, Kota Bandung, Jawa Barat" />

    <TextView
        android:id="@+id/tvCommunitySchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/green_900"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvCommunityName"
        app:layout_constraintTop_toBottomOf="@+id/tvCommunityAddress"
        tools:text="Jadwal: Setiap Minggu ke-3, pukul 16.00-17.30 WIB" />

</androidx.constraintlayout.widget.ConstraintLayout>